  assign icon_size = icon_size | default: 'medium'

  # Icon size classes
  case icon_size
    when 'small'
      assign size_class = 'icon-small'
    when 'large'
      assign size_class = 'icon-large'
    else
      assign size_class = 'icon-medium'
  endcase

  # Manual icon specification - no for loop needed
%}


